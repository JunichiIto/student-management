
<div class="col-md-8">
  <% now = Time.zone.now %>
  <div class="page-header">
    <h1>指導報告作成 <%= '(' + @user.name + ')' %></h1>
  </div>

  <%= form_for(@result, class: 'form-horizontal', role: 'form') do |f| %>
    <% if @result.errors.any? %>
      <div class="alert alert-danger">
        <ul>
        <% @result.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label 'タイトル' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label '内容' %>
      <%= f.text_area :content, class: 'form-control',row: 10 %>
    </div>
    <%= f.submit '編集',class: 'btn btn-default', data: {disable_with:'作成しています...'}  %>
  <% end %>
</div>
